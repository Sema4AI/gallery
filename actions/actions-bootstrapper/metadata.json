{
  "metadata": {
    "name": "Actions Bootstrapper",
    "description": "Action packages bootstrapper",
    "secrets": {},
    "version": 1
  },
  "openapi.json": {
    "openapi": "3.1.0",
    "info": {
      "title": "Sema4.ai Action Server",
      "version": "0.12.0"
    },
    "servers": [
      {
        "url": "http://localhost:8080"
      }
    ],
    "paths": {
      "/api/actions/actions-bootstrapper/bootstrap-action-package/run": {
        "post": {
          "summary": "Bootstrap Action Package",
          "description": "This action sets up an action package in the home directory of the user under the \"actions_bootstrapper\" folder.",
          "operationId": "bootstrap_action_package",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_package_name": {
                      "type": "string",
                      "title": "Action Package Name",
                      "description": "Name of the action package"
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_package_name"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Bootstrap Action Package",
                    "description": "The full path of the bootstrapped action package."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/update-action-package-dependencies/run": {
        "post": {
          "summary": "Update Action Package Dependencies",
          "description": "Update the action package dependencies (package.yaml) for\na specified action package.",
          "operationId": "update_action_package_dependencies",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_package_name": {
                      "type": "string",
                      "title": "Action Package Name",
                      "description": "The name of the action package."
                    },
                    "action_package_dependencies_code": {
                      "type": "string",
                      "title": "Action Package Dependencies Code",
                      "description": "The YAML content to\nwrite into the package.yaml file."
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_package_name",
                    "action_package_dependencies_code"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Update Action Package Dependencies",
                    "description": "A success message."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/update-action-package-action-dev-data/run": {
        "post": {
          "summary": "Update Action Package Action Dev Data",
          "description": "Update the action package dev data for a specified action package.",
          "operationId": "update_action_package_action_dev_data",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_package_name": {
                      "type": "string",
                      "title": "Action Package Name",
                      "description": "The name of the action package."
                    },
                    "action_package_action_name": {
                      "type": "string",
                      "title": "Action Package Action Name",
                      "description": "The name of the action for which the devdata is intended"
                    },
                    "action_package_dev_data": {
                      "type": "string",
                      "title": "Action Package Dev Data",
                      "description": "The JSON content to write into the dev data for this specific action"
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_package_name",
                    "action_package_action_name",
                    "action_package_dev_data"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Update Action Package Action Dev Data",
                    "description": "Whether the dev data was successfully updated or not."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/start-action-server/run": {
        "post": {
          "summary": "Start Action Server",
          "description": "This action starts the bootstrapped action package.",
          "operationId": "start_action_server",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_package_name": {
                      "type": "string",
                      "title": "Action Package Name",
                      "description": "Name of the action package"
                    },
                    "secrets": {
                      "type": "string",
                      "title": "Secrets",
                      "description": "A JSON dictionary where each key is the secret name and the value is the secret value"
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_package_name",
                    "secrets"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Start Action Server",
                    "description": "The address of the running action package."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/stop-action-server/run": {
        "post": {
          "summary": "Stop Action Server",
          "description": "This action shutdowns the running action package.",
          "operationId": "stop_action_server",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_server_url": {
                      "type": "string",
                      "title": "Action Server Url",
                      "description": "URL of the running action package"
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_server_url"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Stop Action Server",
                    "description": "Whether the shutdown was successful or not"
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/update-action-code/run": {
        "post": {
          "summary": "Update Action Code",
          "description": "Replaces actions.py content with the provided input.",
          "operationId": "update_action_code",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_package_name": {
                      "type": "string",
                      "title": "Action Package Name",
                      "description": "The directory for the action to update"
                    },
                    "action_code": {
                      "type": "string",
                      "title": "Action Code",
                      "description": "The source code to place into the actions.py"
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_package_name",
                    "action_code"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Update Action Code",
                    "description": "A success message."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/open-action-code/run": {
        "post": {
          "summary": "Open Action Code",
          "description": "This action opens the code of the action package with VSCode.",
          "operationId": "open_action_code",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_package_name": {
                      "type": "string",
                      "title": "Action Package Name",
                      "description": "Name of the action package"
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_package_name"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Open Action Code",
                    "description": "Whether the code was successfully displayed or not"
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/get-action-run-logs/run": {
        "post": {
          "summary": "Get Action Run Logs",
          "description": "Returns action run logs in plain text by requesting them from the\nprovided action server URL.",
          "operationId": "get_action_run_logs",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_server_url": {
                      "type": "string",
                      "title": "Action Server Url",
                      "description": "The URL (base path) to the action server."
                    },
                    "run_id": {
                      "type": "string",
                      "title": "Run Id",
                      "description": "The ID of the run to fetch logs for."
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_server_url",
                    "run_id"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Get Action Run Logs",
                    "description": "The plain text from the output logs of the run."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      },
      "/api/actions/actions-bootstrapper/get-action-run-logs-latest/run": {
        "post": {
          "summary": "Get Action Run Logs Latest",
          "description": "Returns action run logs in plain text by requesting them from the\nprovided action server URL. Requests the latest run's logs.",
          "operationId": "get_action_run_logs_latest",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "action_server_url": {
                      "type": "string",
                      "title": "Action Server Url",
                      "description": "The URL (base path) to the action server."
                    }
                  },
                  "type": "object",
                  "required": [
                    "action_server_url"
                  ]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successful Response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string",
                    "title": "Response for Get Action Run Logs Latest",
                    "description": "The plain text from the output logs of the run."
                  }
                }
              }
            },
            "422": {
              "description": "Validation Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HTTPValidationError"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "HTTPValidationError": {
          "properties": {
            "errors": {
              "items": {
                "$ref": "#/components/schemas/ValidationError"
              },
              "type": "array",
              "title": "Errors"
            }
          },
          "type": "object",
          "title": "HTTPValidationError"
        },
        "ValidationError": {
          "properties": {
            "loc": {
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "integer"
                  }
                ]
              },
              "type": "array",
              "title": "Location"
            },
            "msg": {
              "type": "string",
              "title": "Message"
            },
            "type": {
              "type": "string",
              "title": "Error Type"
            }
          },
          "type": "object",
          "required": [
            "loc",
            "msg",
            "type"
          ],
          "title": "ValidationError"
        }
      }
    }
  }
}
